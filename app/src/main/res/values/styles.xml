<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:textColor">@color/text_dark</item>

        <item name="md_corner_radius">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ExploreButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargerText" parent="BoldText">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="LargeText" parent="BoldText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextHint">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ED6B62</item>
    </style>

</resources>
